<h1>Listing trucks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Schedule site</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trucks.each do |truck| %>
  <tr>
    <td><%= truck.name %></td>
    <td><%= truck.website %></td>
    <td><%= truck.schedule_site %></td>
    <td><%= truck.twitter %></td>
    <td><%= truck.facebook %></td>
    <td><%= link_to 'Show', truck %></td>
    <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
    <td><%= link_to 'Destroy', truck, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

